<view class="container">
    <map id="map" 
         longitude="{{longitudeCenter}}" 
         latitude="{{latitudeCenter}}" 
         scale="16" 
         markers="{{markers}}"
         controls="{{controls}}" 
         bindcontroltap="controltap" 
         bindmarkertap="markertap" 
         polyline="{{polyline}}" 
         bindregionchange="regionchange"
    >
        <cover-view class="controls">
            <cover-view class="name">
                <cover-view class="nameFrom">{{nameFrom}}<cover-image class="img" src="./img/map-icon.png"></cover-image></cover-view>
                <cover-view>-------</cover-view>
                <cover-view class="nameTo">{{nameTo}}<cover-image class="img" src="./img/map-icon.png"></cover-image></cover-view>
            </cover-view>
            
            <!-- <cover-view class="addressFrom">{{addressFrom}}</cover-view>
            
            <cover-view class="addressTo">{{addressTo}}</cover-view> -->
            
            <cover-view class="length">两地直线距离<cover-view class="num">  {{lineLength}}  </cover-view>米</cover-view>
            <button class="chessBtn" bindtap="chessMap">重新选择</button>
        </cover-view>
    </map>
</view>