/**index.wxss**/
.container{
  padding: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.btn{
  width: 80%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.btn>view{
  width: 45%;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  border: 1rpx solid rgb(182, 233, 248);
  border-radius: 10rpx;
  margin-bottom: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.icon{
  width: 128rpx;
  height: 128rpx;
}
